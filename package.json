{
  "name": "vue-roller-swiper",
  "version": "0.0.10",
  "type": "module",
  "packageManager": "pnpm@10.18.3",
  "description": "A modern Vue 3 carousel component with arc motion effects, touch gestures, and smooth animations.",
  "main": "./dist/vue-roller-swiper.umd.js",
  "module": "./dist/vue-roller-swiper.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/vue-roller-swiper.es.js",
      "require": "./dist/vue-roller-swiper.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && vue-tsc --emitDeclarationOnly",
    "build:lib": "vite build --mode lib",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "release": "pnpm run build:lib && semantic-release",
    "release:dry": "pnpm run build:lib && semantic-release --dry-run"
  },
  "keywords": [
    "vue",
    "vue3",
    "component",
    "swiper",
    "roller"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrmosssir/vue-roller-swiper.git"
  },
  "homepage": "https://github.com/mrmosssir/vue-roller-swiper",
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "dependencies": {
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.1",
    "@semantic-release/npm": "^13.1.1",
    "@types/node": "^24.10.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "semantic-release": "^25.0.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.1",
    "vite-plugin-dts": "^4.5.4",
    "vue-tsc": "^3.1.3"
  }
}
